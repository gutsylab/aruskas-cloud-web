# Multi-Tenant Laravel Configuration

APP_NAME="ArusKAS Cloud"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://aruskas-cloud.test

# Default connection (can be sqlite for development)
DB_CONNECTION=sqlite
DB_DATABASE=/Users/ianibnuwahab/Development/projects/gutsylab/laravel/aruskas-cloud/database/database.sqlite

# Global Database Configuration (for merchants, plans, subscriptions)
DB_GLOBAL_CONNECTION=global_mysql
DB_GLOBAL_HOST=127.0.0.1
DB_GLOBAL_PORT=3306
DB_GLOBAL_DATABASE=aruskas_global
DB_GLOBAL_USERNAME=root
DB_GLOBAL_PASSWORD=

# Tenant Database Configuration (for individual merchant databases)
DB_TENANT_HOST=127.0.0.1
DB_TENANT_PORT=3306
DB_TENANT_USERNAME=root
DB_TENANT_PASSWORD=

# Tenant Database Naming Configuration
# Prefix for tenant database names (e.g., tenant_, company_, client_)
DB_TENANT_PREFIX=aruskas
# Separator between prefix and slug (default: _)
DB_TENANT_SEPARATOR=_

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

# Cache Configuration
CACHE_STORE=database

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis Configuration (optional, for better performance)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcast Configuration
BROADCAST_CONNECTION=log

# Log Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
