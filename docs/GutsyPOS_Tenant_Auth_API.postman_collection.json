{
  "info": {
    "name": "GutsyPOS - Tenant Auth API",
    "description": "API Collection for Tenant Registration and Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "tenant_id",
      "value": "TNT123456",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Tenant Management",
      "item": [
        {
          "name": "Get Subscription Plans",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tenant/plans",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tenant", "plans"]
            }
          },
          "response": []
        },
        {
          "name": "Register New Tenant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"ABC Company\",\n  \"admin_name\": \"John Doe\",\n  \"admin_email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\",\n  \"terms\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/tenant/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tenant", "register"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tenant Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.environment.set(\"token\", jsonData.data.token);",
                  "        console.log(\"Token saved: \" + jsonData.data.token);",
                  "    }",
                  "    if (jsonData.data && jsonData.data.tenant && jsonData.data.tenant.tenant_id) {",
                  "        pm.environment.set(\"tenant_id\", jsonData.data.tenant.tenant_id);",
                  "        console.log(\"Tenant ID saved: \" + jsonData.data.tenant.tenant_id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"device_name\": \"Postman\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/{{tenant_id}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["{{tenant_id}}", "api", "v1", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/{{tenant_id}}/api/v1/auth/me",
              "host": ["{{base_url}}"],
              "path": ["{{tenant_id}}", "api", "v1", "auth", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.environment.set(\"token\", jsonData.data.token);",
                  "        console.log(\"New token saved: \" + jsonData.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_name\": \"Postman\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/{{tenant_id}}/api/v1/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["{{tenant_id}}", "api", "v1", "auth", "refresh"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/{{tenant_id}}/api/v1/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["{{tenant_id}}", "api", "v1", "auth", "logout"]
            }
          },
          "response": []
        },
        {
          "name": "Logout All Devices",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/{{tenant_id}}/api/v1/auth/logout-all",
              "host": ["{{base_url}}"],
              "path": ["{{tenant_id}}", "api", "v1", "auth", "logout-all"]
            }
          },
          "response": []
        }
      ]
    },
    {
