              "host": ["{{base_url}}"],
              "path": ["{{tenant_id}}", "api", "v1", "user"]
            }
          },
          "response": []
        },
        {
          "name": "Get Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
